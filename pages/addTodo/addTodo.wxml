<view><input class ="input" type='text' placeholder='请输入内容' placeholder-style="color: grey" bindinput='getval' value='{{val}}'></input></view>

<button class="addButton"size='mini' bindtap='add'>添加</button>

<view class="list" wx:for="{{list}}" wx:key="{{index}}">

    <text>{{index+1}}---{{item}}</text>

    <button type="default"size='mini' bindtap='del' data-index="{{index}}">删除</button>

</view>
<view class="schedule">
<text>{{schedule}}</text>
</view>